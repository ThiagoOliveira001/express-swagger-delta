{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ES6"],
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"sourceMap": false,
		"strict": true,
		"strictNullChecks": true,
		"target": "es6",
	},
	"include": [
		"./src/**/*.ts",
	],
	"exclude": [
		"./node_modules/*",
	]
}
